pipeline {
    agent any
    tools {
        jdk 'JDK9.0.4'
        maven 'maven3.5.3'
    }
    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test') {
            steps {
                executeTest()
            }
        }

        stage('Devloy') {
            steps {
                executeDeploy()
            }
        }
    }
}

def executeTest() {
    sh 'mvn clean test'
}

def executeDeploy() {
    sh 'mvn clean deploy'
}
